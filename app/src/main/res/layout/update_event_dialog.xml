<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFE8E4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/eventNameUpdateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter new Event Name" />

        <EditText
            android:id="@+id/eventPaceUpdateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter new Pace (km/hr)" />

        <EditText
            android:id="@+id/eventMinAgeUpdateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter new Minimum Age" />
        <EditText
            android:id="@+id/eventRegionUpdateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter new Region" />

        <EditText
            android:id="@+id/eventDistanceUpdateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter new Distance" />

        <EditText
            android:id="@+id/eventRegistrationFeeUpdateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter new Registration Fee" />

        <EditText
            android:id="@+id/eventDifficultyUpdateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter new Difficulty Level (1-3)" />

        <EditText
            android:id="@+id/eventMaxParticipantsUpdateEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter new Max Participants" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/yearDateEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Enter Year (YYYY)" />

            <EditText
                android:id="@+id/monthDateEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Enter Month (MM)" />

            <EditText
                android:id="@+id/dateEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Enter Day (DD)" />
        </LinearLayout>

        <Spinner
            android:id="@+id/eventTypeSpinner2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingTop="16dp">

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#c4823b"
                android:text="Delete Event" />

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#c4823b"
                android:text="Update Event"/>




        </LinearLayout>
    </LinearLayout>
</ScrollView>
